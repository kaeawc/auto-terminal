{
  "name": "auto-terminal",
  "version": "0.1.0",
  "description": "MCP server for LLM-driven terminal automation",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "auto-terminal": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node --format esm",
    "start": "bun run src/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "validate": "bun run typecheck && bun run lint && bun test && bun run build",
    "clean": "rm -rf dist node_modules .bun",
    "prepare": "bun run build"
  },
  "keywords": [
    "mcp",
    "terminal",
    "automation",
    "llm",
    "model-context-protocol"
  ],
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/auto-terminal.git"
  },
  "bugs": {
    "url": "https://github.com/anthropics/auto-terminal/issues"
  },
  "engines": {
    "node": ">=24.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "eslint": "^9.39.2",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "typescript": "^5.7.0"
  }
}
